<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tan.finalproject">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/noAnimTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".activities.SignUpActivity">

        </activity>
        <activity
            android:name=".activities.LogInActivity"
            android:theme="@style/noAnimTheme"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".activities.ChatActivity">

        </activity>
        <activity android:name=".activities.SessionCheckerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UserPickerActivity">

        </activity>
        <activity android:name=".activities.GroupChatActivity">

        </activity>
        <service android:name=".services.InstantMessageService">

        </service>
    </application>

</manifest>